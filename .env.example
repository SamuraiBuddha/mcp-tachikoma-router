# Router Connection Settings
ROUTER_IP=192.168.50.1
ROUTER_USERNAME=admin
ROUTER_PASSWORD=your_password_here

# Router Type (auto, unifi, asus, netgear, pfsense, openwrt)
ROUTER_TYPE=auto

# UniFi Specific Settings
UNIFI_CONTROLLER=https://192.168.1.1:8443
UNIFI_SITE=default
UNIFI_VERIFY_SSL=false

# SSH Settings (for ASUS/OpenWRT)
SSH_PORT=22
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_TIMEOUT=30

# API Settings
API_KEY=
API_ENDPOINT=

# Backup Settings
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/tachikoma.log

# Security
ENCRYPT_CREDENTIALS=true
AUDIT_LOG=true
